@model IEnumerable<PeopleCars.Data.Person>
    
<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <table class="table table-bordered">
            <tr>
                <th>Add Car</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>Car Count</th>
            </tr>
            @foreach (var person in Model)
            {
                <tr>
                    <td>
                        <a href="/home/addcar?personid=@person.Id" class="btn btn-success">
                            Add Car
                        </a>
                    </td>
                    <td>@person.FirstName</td>
                    <td>@person.LastName</td>
                    <td>@person.Age</td>
                    <td>@person.Cars.Count</td>
                </tr>
            }
        </table>
    </div>
</div>